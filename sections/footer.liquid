<footer class="footer" style="
  --footer-main-bg: {{ section.settings.footer_main_bg }};
  --footer-bottom-bg: {{ section.settings.footer_bottom_bg }};
  --footer-text-color: {{ section.settings.footer_text_color }};
">
  <div class="footer__main">
    <div class="container footer__container">
      <div class="footer__columns">
        {% if section.settings.menu_1 != blank %}
          <div class="footer__column">
            <h2 class="footer__heading">{{ section.settings.heading_1 }}</h2>
            <ul class="footer__menu">
              {% for link in section.settings.menu_1.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if section.settings.menu_2 != blank %}
          <div class="footer__column">
            <h2 class="footer__heading">{{ section.settings.heading_2 }}</h2>
            <ul class="footer__menu">
              {% for link in section.settings.menu_2.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if section.settings.menu_3 != blank %}
          <div class="footer__column">
            <h2 class="footer__heading">{{ section.settings.heading_3 }}</h2>
            <ul class="footer__menu">
              {% for link in section.settings.menu_3.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if section.settings.menu_4 != blank %}
          <div class="footer__column">
            <h2 class="footer__heading">{{ section.settings.heading_4 }}</h2>
            <ul class="footer__menu">
              {% for link in section.settings.menu_4.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="footer__bottom">
    <div class="container">
      <div class="footer__branding">
        <div class="footer__logo-wrapper">
          {% if section.settings.logo != blank %}
            <div class="footer__logo-image">
              {{ section.settings.logo | image_url: width: 300 | image_tag: 
                loading: 'lazy',
                width: section.settings.logo.width,
                height: section.settings.logo.height,
                alt: section.settings.brand_text
              }}
            </div>
          {% else %}
            <h1 class="footer__logo">{{ section.settings.brand_text }}</h1>
          {% endif %}
        </div>

        
        <div class="footer__social-info">
          {% if section.settings.social_handle_1 != blank %}
            <span class="footer__social">
              {% if section.settings.social_url_1 != blank %}
                <a href="{{ section.settings.social_url_1 }}" target="_blank" rel="noopener" class="footer__social-link">
                  {{ section.settings.social_handle_1 }}
                </a>
              {% else %}
                {{ section.settings.social_handle_1 }}
              {% endif %}
              <span class="footer__social-dot footer__social-dot--orange"></span>
            </span>
          {% endif %}
          
          {% if section.settings.social_handle_2 != blank %}
            <span class="footer__social">
              {% if section.settings.social_url_2 != blank %}
                <a href="{{ section.settings.social_url_2 }}" target="_blank" rel="noopener" class="footer__social-link">
                  {{ section.settings.social_handle_2 }}
                </a>
              {% else %}
                {{ section.settings.social_handle_2 }}
              {% endif %}
              <span class="footer__social-dot footer__social-dot--blue"></span>
            </span>
          {% endif %}
          
          {% if section.settings.location_text != blank %}
            <span class="footer__location">
              {{ section.settings.location_text }}
              <span class="footer__social-dot footer__social-dot--beige"></span>
            </span>
          {% endif %}
          
          {% if section.settings.copyright_text != blank %}
            <span class="footer__copyright">{{ section.settings.copyright_text }}</span>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{{ 'footer.css' | asset_url | stylesheet_tag }}

