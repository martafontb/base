<div class="services-colors">
  <div class="container">
    <div class="services-colors__header">
      <h2 class="services-colors__title h2">{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <div class="services-colors__description">{{ section.settings.description }}</div>
      {% endif %}
    </div>
    
    <div class="services-colors__grid">
      {% for block in section.blocks %}
        {% if block.type == 'color' %}
          <div class="services-colors__item" {{ block.shopify_attributes }}>
            <div class="services-colors__swatch" style="--color: {{ block.settings.color_hex }}">
              <div class="services-colors__swatch-inner"></div>
            </div>
            <div class="services-colors__info">
              <h3 class="services-colors__color-name">{{ block.settings.color_name }}</h3>
              <div class="services-colors__color-code">{{ block.settings.color_code }}</div>
              {% if block.settings.color_description != blank %}
                <div class="services-colors__color-description">{{ block.settings.color_description }}</div>
              {% endif %}
            </div>
            {% if block.settings.image != blank %}
              <div class="services-colors__example">
                {% render 'component_image', 
                  image: block.settings.image,
                  width: 400,
                  widths: '200, 300, 400',
                  sizes: '(min-width: 768px) 25vw, 50vw',
                  class: 'services-colors__example-image'
                %}
                <div class="services-colors__example-overlay" style="--color: {{ block.settings.color_hex }}"></div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    {% if section.settings.note != blank %}
      <div class="services-colors__note">
        {{ section.settings.note }}
      </div>
    {% endif %}
    
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <div class="services-colors__cta">
        <a href="{{ section.settings.button_url }}" class="btn btn--primary services-colors__button">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{{ 'services-colors.css' | asset_url | stylesheet_tag }}

